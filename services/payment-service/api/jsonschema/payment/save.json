{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "JSON Schema for Create Order Request",
  "type": "object",
  "properties": {
    "order_id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique identifier for the order"
    },
    "amount": {
      "type": "integer",
      "minimum": 1,
      "description": "Total amount of the transaction"
    },
    "method_id": {
      "type": "integer",
      "minimum": 1,
      "description": "Total amount of the transaction"
    },
    "channel": {
      "type": "string",
      "enum": ["material", "sparepart", "rent_heavy_equipment"],
      "description": "The channel type of the order"
    },
    "customer": {
      "type": "object",
      "properties": {
        "first_name": {
          "type": "string",
          "minLength": 1,
          "description": "Customer's first name"
        },
        "last_name": {
          "type": "string",
          "description": "Customer's last name (optional)"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Customer's email address"
        },
        "phone": {
          "type": "string",
          "minLength": 1,
          "description": "Customer's phone number"
        }
      },
      "required": ["first_name", "email", "phone"],
      "additionalProperties": false
    }
  },
  "items": {
    "type": "array",
    "description": "List of items in the transaction",
    "items": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique ID for the item"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the item"
        },
        "price": {
          "type": "integer",
          "minimum": 0,
          "description": "Price of a single item"
        },
        "qty": {
          "type": "integer",
          "minimum": 1,
          "description": "Quantity of the item"
        }
      },
      "required": ["id", "name", "price", "qty"]
    }
  },
  "required": [
    "order_id",
    "amount",
    "channel",
    "customer",
    "items",
    "method_id"
  ],
  "additionalProperties": true
}
